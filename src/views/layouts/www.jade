doctype html
html(lang="en")
  //-
    the `vars` block allows child views to
    inject variables into the parent layout
  block vars
  head
    include ../partials/_head
  body
    include ../partials/_header
    main.MainContent
      block content
    include ../partials/_footer
    script.
      WebFontConfig = { google: { families: [ 'PT Serif:400,700,400italic', 'Source Sans Pro:400,600,700', 'Playfair Display:400,700' ]} };
      (function(d) { var wf = d.createElement('script'), s = d.scripts[0]; wf.src = 'https://ajax.googleapis.com/ajax/libs/webfont/1.5.18/webfont.js'; s.parentNode.insertBefore(wf, s); })(document);
    block scripts
