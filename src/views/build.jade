extends layouts/www

block vars
  - var namespace = 'build'
  - var layout = 'light'

block content
  section.BuildProject(data-hook="getMainContent")
    .ContentWrapper
      h1.headline.-big.centered Let&rsquo;s build something great together!

      form
        fieldset
          legend.bp-section-title Tell us about yourself

          .bp-field
            label.bp-label(for="name") Full Name
            input#name.bp-textfield(type="text", placeholder="Jane Doe", name="fullName")

          .bp-field
            label.bp-label(for="email") Email Address
            input#email.bp-textfield(type="email", placeholder="janedoe@email.com", name="email")

          .bp-field
            label.bp-label(for="phone") Phone Number
            input#phone.bp-textfield(type="tel", placeholder="(123) 456-7890", name="phone")

        fieldset
          legend.bp-section-title Tell us about your project

          .bp-field
            label.bp-label(for="describe") detail project requirements, goals, and objectives
            textarea#describe.bp-textarea(name="projectDetails")

        fieldset
          legend.bp-section-title.-tight Budget

          .bp-budget-group
            .bp-budget.-from(data-hook="budgetFrom") $10,000
            span &nbsp;&mdash;&nbsp;
            .bp-budget.-to(data-hook="budgetTo") $20,000

          div.bp-budget-slider(data-hook="budgetRange")

        .btn-wrapper
          input.bp-submit.btn(type="submit" value!="Let&rsquo;s build this thing!")

      h1 success!

block scripts
  script(src="js/build.bundle.js")
