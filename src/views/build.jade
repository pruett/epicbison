extends layouts/www

block vars
  - var namespace = 'build'
  - var layout = 'light'

block content
  section.BuildProject
    .ContentWrapper
      h1.headline.-big.centered Let&rsquo;s build something great together!

      form
        fieldset
          legend.bp-section-title Tell us about yourself

          .bp-field
            label.bp-label(for="name") Full Name
            input#name.bp-textfield(type="text", placeholder="Full Name")

          .bp-field
            label.bp-label(for="email") Email Address
            input#email.bp-textfield(type="email", placeholder="Email Address")

          .bp-field
            label.bp-label(for="phone") Phone Number
            input#phone.bp-textfield(type="tel", placeholder="Phone Number")

        fieldset
          legend.bp-section-title Tell us about your project

          .bp-field
            label.bp-label(for="describe") detail the project requirements, goals, and objectives
            textarea#describe.bp-textarea

        fieldset
          legend.bp-label Tell us about your budget

          .bp-field
            h2.bp-label approximate budget
            div(data-hook="budgetRange")

        input(type="submit" value!="Let&rsquo;s go!")

block scripts
  script(src="js/build.bundle.js")
