@import '../mixins/typography'

.bp_bullets
  margin: 0
  padding: 0

.bp_bullet
  list-style: none
  margin-bottom: 3rem
  border-bottom: 1px solid #f4f4f4
  padding-bottom: 1.5rem

  &:last-child
    border-bottom: none
    padding-bottom: 0
    margin-bottom: 0

  &.-with-enumeration
    position: relative

.bp_index
  sans-serif()
  position: absolute
  top: 0
  left: -6rem
  font-size: 2rem
  font-weight: 600

.bp_title
  sans-serif()
  font-size: 2.25rem
  font-weight: 700
  letter-spacing: 0px
  line-height: 1


