@import '../mixins/typography'

.bp_bullets
  margin: 0
  padding: 0

.bp_bullet
  list-style: none
  margin-bottom: 3rem
  padding-bottom: 1.5rem

  &.-with-enumeration
    position: relative

.bp_index
  sans-serif()
  position: absolute
  top: 0
  left: -6rem
  font-size: 2rem
  font-weight: 600

.bp_title
  sans-serif()
  font-size: 2.25rem
  font-weight: 700
  letter-spacing: 0px
  line-height: 1
  text-align: center
  border-bottom: 1px solid #ccc
  padding-bottom: 0.5rem

.bp-icon > svg
  width: 6.25rem
  height: 6.25rem
  display: block
  margin: 0 auto 1.5rem
