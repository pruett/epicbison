@import 'mixins/typography'

body
  serif()
  font-weight: 400
  color: #646464
  font-smoothing()

h1
  font-size: 2.75rem
  margin-top: 0

h2
  font-size: 2.125rem
  margin-top: 0

h3
  font-size: 1.75rem
  margin-top: 0

h4
  font-size: 1.25rem
  margin-top: 0

h5
  font-size: 1rem
  margin-top: 0

h6
  font-size: 0.85rem
  margin-top: 0

p
  font-size: 1.15rem
  margin-top: 0
  line-height: 1.45

blockquote
  border-left: 1rem solid #F9F9F9
  padding: 0 3%
  color: #4C4C4C

  p
    font-size: 1.45rem
    font-style: italic
